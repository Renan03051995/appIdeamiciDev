<PaginaCarteirinhaePage>:
    FloatLayout:
        GridLayout:
            rows: 1
            pos_hint: {"right": 0.85, "top": 1}
            size_hint: 0.7, 0.15
            ImageButton:
                size_hint: 0.25, 0.1
                source: "icones/rg-cpf-cnh.PNG"
            LabelButton:
                text: "[color=#000000]Identidades pessoais[/color]"
                bold: True
                markup: True
        # Identidades pessoais - RG
        FloatLayout:
            pos_hint: {"right": 0.98, "top": 0.9}
            size_hint: 0.95, 0.6
            ImageButton:
                pos_hint: {"right": 0.2, "top": .85}
                size_hint: 0.2, 0.2
                source: "icones/carteirinha_estudante.png"
                on_release: app.mudar_tela("paginargcpf")
            LabelButton:
                text_size: cm(2.5), cm(2)
                halign: 'right'
                valign: 'middle'
                pos_hint: {"right": 0.5, "top": 0.9}
                size_hint: 0.3, 0.3
                text: "[color=#808080]Carterinha de estudante Código:[/color]"
                bold: True
                markup: True
                on_release: app.mudar_tela("paginargcpf")
            LabelButton:
                text_size: self.size
                halign: 'right'
                valign: 'middle'
                pos_hint: {"right": 0.8, "top": 0.9}
                size_hint: 0.3, 0.3
                text: "[color=#000000]#Código[/color]"
                on_release: app.mudar_tela("paginargcpf")
                bold: True
                markup: True
            ImageButton:
                pos_hint: {"right": 0.98, "top": .8}
                size_hint: 0.1, 0.1
                source: "icones/foto_perfil.png"
                on_release: app.mudar_tela("paginargcpf")


        # botao voltar
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#F85F6A")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right": 0.2, "top": 0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("homepage")

