<LoginPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            text: "[color=#808080]SIDD \n Sistema integração de dados e documentos \n Ideamici Dev[/color]"
            bold: True
            markup: True
            pos_hint:{"right": 0.9, "top": 0.9 }
            size_hint: 0.8, 0.2
            halign: 'center'
            valign: 'middle'
        TextInput:
            id: email_input
            hint_text: "Email"
            pos_hint:{"right": 0.9, "top": 0.7 }
            size_hint: 0.8, 0.1
        TextInput:
            id: senha_input
            password: True
            hint_text: "Senha"
            pos_hint:{"right": 0.9, "top": 0.55 }
            size_hint: 0.8, 0.1
        Label:
            id: mensagem_login
            text: "[color=#000000]Faça seu Login[/color]"
            bold: True
            markup: True
            pos_hint:{"right": 0.9, "top": 0.45 }
            size_hint: 0.8, 0.1
        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.firebase.fazer_login(email_input.text, senha_input.text)
            text: "Faça seu login"
            pos_hint:{"right": 0.45, "top": 0.3 }
            size_hint: 0.35, 0.1
        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png"  if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.firebase.criar_conta(email_input.text, senha_input.text)
            text: "Criar conta"
            pos_hint:{"right": 0.9, "top": 0.3 }
            size_hint: 0.35, 0.1
